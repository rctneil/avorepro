<div class="flex flex-col">
  <%= render Avo::PanelComponent.new(name: 'Gallery Tools', display_breadcrumbs: true) do |c| %>
    <% c.with_tools do %>
      <div class="text-sm italic">This is the panels tools section.</div>
    <% end %>

    <% c.with_body do %>
      <div class="flex flex-col justify-between py-6 min-h-24">
        <div class="px-6 space-y-4">
          <ul>
            <li><%= link_to "Waste Time", avo.waste_time_path, data: { "turbo-prefetch": false } %></li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
